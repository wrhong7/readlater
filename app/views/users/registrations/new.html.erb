<section id="login">
    <div class="container">
      <div class="row">
          <div class="col-xs-12">
              <div class="form-wrap">
                <h1>You are only one step away!</h1>
                <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %> 
                    <form role="form" action="javascript:;" method="post" id="login-form" autocomplete="off">
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, placeholder: "  Your Email", size: "47" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, autocomplete: "off", placeholder: "  Password", size: "21" %>
                            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "  Password Confirmation", size: "23" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :first_name, autofocus: true, placeholder: "  First Name", size: "22x12" %>
                            <%= f.text_field :last_name, autofocus: true, placeholder: "  Last Name", size: "22x12" %>
                        </div>
                        <div class="checkbox">
                            <h6><%= f.submit "That's it. Sign me up!" %></h6>
                        </div>
                    </form>
                    <hr>
                <% end %>
              </div>
        </div> <!-- /.col-xs-12 -->
      </div> <!-- /.row -->
    </div> <!-- /.container -->
</section>

</body>
</html>


